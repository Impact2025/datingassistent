# =============================================================================
# DATING ASSISTENT - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git - it contains sensitive information!

# =============================================================================
# DATABASE (Neon PostgreSQL)
# =============================================================================
# Get these from: https://console.neon.tech/
POSTGRES_URL="postgresql://user:password@host/database?sslmode=require&pgbouncer=true&connect_timeout=15"
POSTGRES_PRISMA_URL="postgresql://user:password@host/database?sslmode=require&channel_binding=require&pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NON_POOLING="postgresql://user:password@host/database?sslmode=require&channel_binding=require"

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Generate a secure random string (32+ characters)
# Use: openssl rand -base64 32
JWT_SECRET="CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS"

# =============================================================================
# EMAIL SERVICE (SendGrid)
# =============================================================================
# Get your API key from: https://app.sendgrid.com/settings/api_keys
# Must start with "SG."
SENDGRID_API_KEY="SG.your_sendgrid_api_key_here"

# =============================================================================
# ANALYTICS (Google Analytics 4)
# =============================================================================
# Optional: Enable real website analytics instead of mock data
# Follow ANALYTICS_SETUP.md for complete setup instructions

# Your GA4 Property ID (starts with "G-")
GA4_PROPERTY_ID="G-CLGV5SLPFW"

# Service Account credentials for GA4 API access
# GA4_SERVICE_ACCOUNT_EMAIL="your-service-account@project.iam.gserviceaccount.com"
# GA4_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----"

# =============================================================================
# AI SERVICES (OpenRouter)
# =============================================================================
# Get your API key from: https://openrouter.ai/keys
# Used for:
#   - Photo analysis (google/gemini-flash-1.5-8b - vision model)
#   - Chat coaching (meta-llama/llama-3.1-8b-instruct)
#   - Bio generation and other AI features
# Rate limits: 10 requests/hour per feature (configured in code)
OPENROUTER_API_KEY="sk-or-v1-your_openrouter_api_key_here"

# Optional: OpenRouter configuration
# Your app URL for analytics/tracking (defaults to NEXT_PUBLIC_BASE_URL)
NEXT_PUBLIC_APP_URL="http://localhost:9001"

# =============================================================================
# PAYMENT PROVIDER (MultiSafePay)
# =============================================================================
# Get your API key from: https://merchant.multisafepay.com/
MULTISAFEPAY_API_KEY="your_multisafepay_api_key_here"

# Test mode: true for testing, false for production
NEXT_PUBLIC_MSP_TEST_MODE="true"

# ðŸ”’ SECURITY: Webhook Secret (REQUIRED for production)
# Generate a secure random string to verify webhook authenticity
# Use: openssl rand -base64 32
MULTISAFEPAY_WEBHOOK_SECRET="CHANGE_THIS_TO_A_SECURE_RANDOM_STRING"

# ðŸ”’ SECURITY: Webhook IP Whitelist (Optional but recommended)
# Comma-separated list of MultiSafePay webhook IP addresses
# Check MultiSafePay documentation for current IP ranges
# Example: MULTISAFEPAY_WEBHOOK_IPS="1.2.3.4,5.6.7.8"
MULTISAFEPAY_WEBHOOK_IPS=""

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Your application URL (important for emails and redirects)
# Development: http://localhost:9001
# Production: https://yourdomain.com
NEXT_PUBLIC_BASE_URL="http://localhost:9001"

# Node environment
NODE_ENV="development"

# =============================================================================
# ðŸ”’ ADMIN USER CREATION (Development Only)
# =============================================================================
# These are ONLY for initial admin creation in development
# DO NOT set these in production! Use database console instead.

# Set to "true" to enable admin creation endpoint (disable after use)
# ALLOW_ADMIN_CREATION="false"

# Admin user credentials (min 16 characters for password)
# ADMIN_EMAIL="admin@example.com"
# ADMIN_PASSWORD="YourSecurePassword123!@#"

# =============================================================================
# ERROR MONITORING (Sentry)
# =============================================================================
# Get your DSN from: https://sentry.io/settings/projects/YOUR_PROJECT/keys/
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"

# =============================================================================
# reCAPTCHA (Google reCAPTCHA v3)
# =============================================================================
# Get your keys from: https://www.google.com/recaptcha/admin
# Site Key: Used in frontend components
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="your_recaptcha_site_key_here"
# Secret Key: Used in API routes for server-side verification
RECAPTCHA_SECRET_KEY="your_recaptcha_secret_key_here"

# =============================================================================
# OPTIONAL: Firebase (Legacy - can be removed if not used)
# =============================================================================
NEXT_PUBLIC_FIREBASE_API_KEY=""
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=""
NEXT_PUBLIC_FIREBASE_PROJECT_ID=""
NEXT_PUBLIC_FIREBASE_APP_ID=""
