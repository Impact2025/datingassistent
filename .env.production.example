# =============================================================================
# DATING ASSISTENT - PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
# Use these settings when deploying to production (Vercel, etc.)
# Configure these in your hosting platform's environment variables dashboard

# =============================================================================
# DATABASE (Neon PostgreSQL - PRODUCTION)
# =============================================================================
POSTGRES_URL="postgresql://prod_user:password@prod-host/database?sslmode=require&pgbouncer=true&connect_timeout=15"
POSTGRES_PRISMA_URL="postgresql://prod_user:password@prod-host/database?sslmode=require&channel_binding=require&pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NON_POOLING="postgresql://prod_user:password@prod-host/database?sslmode=require&channel_binding=require"

# =============================================================================
# AUTHENTICATION (PRODUCTION)
# =============================================================================
# CRITICAL: Use a different JWT secret than development!
# Generate with: openssl rand -base64 64
JWT_SECRET="GENERATE_NEW_SECURE_SECRET_FOR_PRODUCTION_MIN_64_CHARS"

# =============================================================================
# EMAIL SERVICE (SendGrid - PRODUCTION)
# =============================================================================
SENDGRID_API_KEY="SG.your_production_sendgrid_key"

# =============================================================================
# AI SERVICES (OpenRouter - PRODUCTION)
# =============================================================================
OPENROUTER_API_KEY="sk-or-v1-your_production_openrouter_key"

# =============================================================================
# PAYMENT PROVIDER (MultiSafePay - PRODUCTION)
# =============================================================================
# IMPORTANT: Use your LIVE API key, not test key!
MULTISAFEPAY_API_KEY="your_live_multisafepay_api_key"

# CRITICAL: Set to false for production!
NEXT_PUBLIC_MSP_TEST_MODE="false"

# =============================================================================
# APPLICATION SETTINGS (PRODUCTION)
# =============================================================================
# Your production domain
NEXT_PUBLIC_BASE_URL="https://yourdomain.com"

# MUST be production
NODE_ENV="production"

# =============================================================================
# VERCEL SPECIFIC (if deploying to Vercel)
# =============================================================================
# These are automatically set by Vercel, but you can override:
# VERCEL_URL - automatically set by Vercel
# VERCEL_ENV - automatically set (production, preview, development)
